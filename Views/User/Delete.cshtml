@model BrodyagaWeb.Models.User

@{
    ViewData["Title"] = "Боєць";
}

<h1>Ви впевнені, що бажаєте видалити?</h1>
<div>
    <h4>Боєць</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MidleName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MidleName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Unit)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UnitNumber)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        @if (ViewBag.ActionSource != null)
        {
            <input type="hidden" name="ActionSource" value="@ViewBag.ActionSource" />
        }
        <input type="submit" value="Видалити" class="btn btn-danger" />
    </form>
    <div>
        @if (ViewBag.ActionSource != null)
        {
            <a href="@ViewBag.ActionSource">До переліку</a>
        }
        else
        {
            <a asp-action="Index">До переліку</a>
        }
    </div>
</div>
