@model BrodyagaWeb.Models.TransferAct

@{
    ViewData["Title"] = "Акти Надх./Повер. майна";
}

<h1>Редагування</h1>

<h4>Акти Надх./Повер. майна</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RegisterDate" />
            <div class="form-group">
                <label asp-for="ActNumber" class="control-label"></label>
                <input asp-for="ActNumber" class="form-control" />
                <span asp-validation-for="ActNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DictExtSrcId" class="control-label"></label>
                <select asp-for="DictExtSrcId" class="form-control" asp-items="ViewBag.DictExtSrcId"></select>
                <span asp-validation-for="DictExtSrcId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsGiveOut" /> 
                    @Html.DisplayNameFor(model => model.IsGiveOut)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ActDate" class="control-label"></label>
                <input asp-for="ActDate" class="form-control" />
                <span asp-validation-for="ActDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterDate" class="control-label">@Html.DisplayNameFor(model => model.RegisterDate)</label>
                <label asp-for="RegisterDate" class="control-label">@Html.DisplayFor(model => model.RegisterDate)</label>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">До переліку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
